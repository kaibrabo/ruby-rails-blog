<!DOCTYPE html>
<html>
	<head>
		<title>Blog</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
    	
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<header>
			<h1><%= link_to "Flah's Closet", root_path, :class => "link_to" %></h1>

			<ul class="navbar">
				<li>
					<%= link_to "Topics", topics_path, :class => "link_to" %>
				</li>
				<li>
					<%= link_to "Posts", posts_path, :class => "link_to" %>
				</li>
				<li>
					<%= link_to "About", about_path, :class => "link_to" %>
				</li>
				<li>
					<%= link_to "Contact", contact_path, :class => "link_to" %>
				</li>
				<li>
					<%= link_to "FAQ", faq_path, :class => "link_to" %>
				</li>
			</ul>
		</header>

		<%# Error Banner %>
		<div class="flash-banner">
		<% if flash[:notice] %>
    		<div class="notice">
				<p class="notice-text">
					<%= flash[:notice] %>
				</p>
			</div>
		<% elsif flash[:alert] %>
			<div class="alert">
				<p class="alert-text">
					<%= flash[:alert] %>
				</p>
			</div>
		<% end %>
		</div>

		<main>
			<%= yield %>
		</main>
	</body>
</html>
