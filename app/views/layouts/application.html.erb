<!DOCTYPE html>
<html>
	<head>
		<title>Blog</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
    	
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700&display=swap" rel="stylesheet" media="print">
		
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<header>
			<h1><%= link_to "blumelist", root_path, class: "link_to" %></h1>

			<ul class="navbar">
				<li>
					<%= link_to "Shop", root_path, class: "link_to" %>
				</li>				
				<li>
					<%= link_to "Topics", topics_path, class: "link_to" %>
				</li>
				<li>
					<%= link_to "About", about_path, class: "link_to" %>
				</li>
				<li>
					<%= link_to "Contact", contact_path, class: "link_to" %>
				</li>
				<li>
					<%= link_to "FAQ", faq_path, class: "link_to" %>
				</li>
				<% if current_user %>
					<ul>
						<li>
							<%= image_tag current_user.avatar_url(48) %>
						</li>
						<li>
							<p>
								<%= current_user.name %> - 
								<%= link_to "Sign Out", session_path(current_user), method: :delete %>
							<p>
						</li>
					</ul>
				<% else %>
					<li>
						<%= link_to "Sign In", new_session_path, class: "link_to" %>
					</li>
				<% end %>
			</ul>
		</header>

		<%# Error Banner %>
		<div class="flash-banner">
		<% if flash[:notice] %>
    		<div class="notice">
				<p class="notice-text">
					<%= flash[:notice] %>
				</p>
			</div>
		<% elsif flash[:alert] %>
			<div class="alert">
				<p class="alert-text">
					<%= flash[:alert] %>
				</p>
			</div>
		<% end %>
		</div>

		<main>
			<%= yield %>
		</main>

		<script async src="https://kit.fontawesome.com/fe0bb2c6a9.js"></script>
	</body>
</html>
