<% if favorite = current_user.favorite_for(post) %>
    <%= link_to [post, favorite], class: '', method: :delete do %>
        <i class="fas fa-heart"></i>
    <% end %>
<% else %>
    <%= link_to [post, Favorite.new], class: '', method: :post do %>
        <i class="far fa-heart"></i>
    <% end %>
<% end %>
