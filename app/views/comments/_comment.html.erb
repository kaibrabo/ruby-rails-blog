<div class="comment">
    <div class="comment-body">
        <p class="comment-body-text"><%= comment.body %></p>
        <p class="comment-body-user"><%= comment.user.name %> | <%= time_ago_in_words(comment.created_at) %></p>
    </div>
    <% if user_is_authorized_for_comment?(comment) %>
    | <%= link_to "delete", [@post, comment], method: :delete %>
    <% end %>
</div>