
<%= form_for [topic, post] do |f| %>
    <% if post.errors.any? %>
        <div>
            <h4>
                <%= pluralize(post.errors.count, "error") %>.
            </h4>

            <ul>
                <% post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= form_group_tag(post.errors[:title]) do %>
        <%= f.label :title, :class => "form-post-title-label" %>
        <%= f.text_field :title, :class => "form-post-title-text" %>
    <% end %>

    <%= form_group_tag(post.errors[:body]) do %>
        <%= f.label :body, :class => "form-post-body-label" %>
        <%= f.text_area :body, :class => "form-post-body-text" %>
    <% end %>

    <div class="form-post-buttons">
        <%= f.submit "save", :class => "form-post-submit" %>
        <%= link_to "cancel", topic_path(topic), :class => "cancel-button" %>
    </div>
<% end %>

