<div class="posts-container">
    <h1 class="all-posts-title">All Posts</h1>

    <div class="all-posts-buttons">
        <button class="new-post-button">
            <%= link_to "New Post", new_post_path %>
        </button>
    </div>

    <div class="posts-list">
        <% @posts.each do |post| %>
            <div class="post">
            
                <%= link_to(post)  do %>
                    <div class="post-title">
                        <%= post.title %>
                    </div>
                    <div class="post-body">
                        <%= post.body %>
                    </div>
                <% end %>

                <div class="post-buttons-container">
                    <%= link_to "Edit", edit_post_path(post), :class => "edit-post-button"%>
                    <%= link_to "Delete", post, method: :delete, :class => "delete-post-button", data: {confirm: 'Are you sure you want to delete this post?'} %>
                </div>
            </div>
        <% end %>
    </div>
</div>